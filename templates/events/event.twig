{% extends "base.twig" %}

{% block title %}Event archive - results{% endblock %}

{% block extraStyles %}
    <link href="/assets/css/tableStyles.css" rel="stylesheet">
{% endblock %}

{% block nav %}
    {% include ('allPages/nav.twig') %}
{% endblock %}

{% block mainBody %}
    <div class="col blog-main">
        <h1 class="blog-post-title">
            Event details: {{ event.competitionName }} {{ event.eventYear }}
        </h1>
        {% if event.isUnusualLocation %}
            <h2>Held at {{ event.eventLocation }}</h2>
        {% endif %}
        <div class="blog-post">
            <div class="row">
                <div class="col-md-8 align-self-center">
                    <h3>Results</h3>
                    <table class="table table-striped table-light">
                        <thead>
                        <tr>
                            <th class="position-col">Position</th>
                            {% if event.pealNumbers %}
                                <th class="peal-no-col">Peal Number</th>
                            {% endif %}
                            <th class="fault-col">Faults</th>
                            <th>Team</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for result in event.results %}
                            <tr>
                                <td class="text-end">
                                    {{ result.position }}
                                </td>
                                {% if event.pealNumbers %}
                                    <td class="text-end">
                                        {{ result.pealNumber }}
                                    </td>
                                {% endif %}
                                <td class="text-end fault-field">
                                    {{ result.faults }}
                                </td>
                                <td>
                                    <a href="team/team.php?teamId={{ result.teamId }}">
                                        {{ result.team }}
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <div class="row">
                        <div class="col-12">
                            <h3>Event statistics</h3>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <h5>Total faults</h5>
                                <p>{{ event.statistics.totalFaults }}</p>
                            </div>
                            <div class="col-4">
                                <h5>Average Faults</h5>
                                <p>{{ event.statistics.meanFaults }}</p>
                            </div>
                            <div class="col-4">
                                <h5>Winning Margin</h5>
                                <p>{{ event.statistics.winningMargin }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    {% if event.judges is not empty %}
                        <div id="judges-section">
                            <h3>Judges</h3>
                        </div>
                    {% endif %}
                    {% if event.winningTeam is not empty %}
                        <div id="winning-team-section">
                            <h3>Winning Team</h3>
                            <table class="table table-striped table-light">
                                <thead>
                                <tr>
                                    <th class="bell-col">Bell</th>
                                    <th>Ringer</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ringer in event.winningTeam %}
                                    <tr>
                                        <td class="text-end">
                                            {{ ringer.bell }}
                                        </td>
                                        <td>
                                            <a href="#?ringerId={{ ringer.id }}">
                                                {{ ringer.name }}
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script type="application/javascript"
            src="/assets/js/event.js"
    ></script>
{% endblock %}
