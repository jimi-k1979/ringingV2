{% extends "base.twig" %}

{% block title %}
    Event archive - ringer record
{% endblock %}

{% block extraStyles %}
    <link href="/assets/css/tableStyles.css" rel="stylesheet">
{% endblock %}

{% block nav %}
    {% include ('allPages/nav.twig') %}
{% endblock %}

{% block mainBody %}
    <div class="col blog-main">
        <h1 class="blog-post-title">
            Ringer record for {{ ringer.firstName }} {{ ringer.lastName }}
        </h1>
        {% if ringer.judgeId is not null %}
            <p>
                <a href="judge.php?judgeId={{ ringer.judgeId }}">
                    Also a judge
                </a>
            </p>
        {% endif %}
        <div class="blog-post">
            <div class="row justify-content-md-center">
                <div class="col-md-6 align-self-center">
                    <h3>Events won</h3>
                    <table class="table table-striped table-light">
                        <thead>
                        <tr>
                            <th class="event-col">Event</th>
                            <th class="bell-col">Bell rung</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td>
                                    <a href="event.php?eventId={{ event.id }}">
                                        {{ event.year }} {{ event.event }}
                                    </a>
                                </td>
                                <td class="text-end">
                                    {{ event.bell }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6 align-self-center">
                    <h3>Statistics</h3>
                    <!-- put statistics here -->
                </div>
            </div>
        </div>
    </div>
{% endblock %}
